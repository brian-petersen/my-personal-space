<%= for q <- @quotes do %>
  <div class="card mb-4">
    <div class="card-body">
      <p><%= q.text %></p>
      <%= link q.author.name, to: Routes.authors_path(@conn, :show, q.author.slug) %></li>

      <%= if signed_in?(@conn) do %>
        <div class="float-right">
          <%= link "Edit", to: Routes.quotes_path(@conn, :edit, q.id) %></li>
          &middot;
          <%= link "Delete", to: Routes.quotes_path(@conn, :delete, q.id), method: :delete, class: "text-danger", data: [confirm: "Really delete?"] %></li>
        </div>
        <div class="clearfix"></div>
      <% end %>
    </div>
  </div>
<% end %>
