<div id="<%= @quote.permalink %>">
  <%= if @quote.text_rendered != nil do %>
    <%= raw(@quote.text_rendered) %>
  <% else %>
    <p><%= @quote.text %></p>
  <% end %>

  <%= if @quote.source do %>
    <p class="font-italic font-weight-light">
      Source:

      <%= if is_link?(@quote.source) do %>
        <a href="<%= @quote.source %>" target="_blank">
          <%= @quote.source %>
        </a>
      <% else %>
        <%= @quote.source %>
      <% end %>
    </p>
  <% end %>
</div>
